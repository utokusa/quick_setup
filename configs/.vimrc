syntax on

"Language settings
set langmenu=none
let $LANG = 'en'
set belloff=all
" Allow to use backspace normally
set backspace=indent,eol,start
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set smarttab
set nu
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set colorcolumn=80
set expandtab                                                               
set term=screen-256color "For tmux   
set clipboard=unnamedplus

